{
  "name": "chainrepclient",
  "version": "1.0.0",
  "description": "A Typescript npm package for interacting with the ChainReputation contract.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "mocha",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "format": "prettier --write \"src/**/*ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timolegros/ChainRepClient.git"
  },
  "keywords": [
    "on-chain",
    "reputation",
    "IPFS",
    "ChainReputation"
  ],
  "author": "Timothee Legros",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timolegros/ChainRepClient/issues"
  },
  "homepage": "https://github.com/timolegros/ChainRepClient#readme",
  "devDependencies": {
    "prettier": "^2.3.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "ipfs-core": "^0.8.0",
    "web3": "^1.3.6"
  }
}
